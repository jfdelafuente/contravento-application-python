# ============================================================================
# ContraVento - Local Development Environment Variables
# ============================================================================
# Copy to .env.local and customize for your local machine
# Usage: docker-compose -f docker-compose.yml -f docker-compose.local.yml --env-file .env.local up
# ============================================================================

# =============================================================================
# ENVIRONMENT
# =============================================================================
APP_ENV=development
APP_NAME=ContraVento-Local
DEBUG=true

# =============================================================================
# DATABASE - PostgreSQL (Local)
# =============================================================================
POSTGRES_DB=contravento_local
POSTGRES_USER=contravento_local
POSTGRES_PASSWORD=local_dev_password_change_me
POSTGRES_PORT=5432

# Backend connection (from Docker container - use service name 'postgres')
DATABASE_URL=postgresql+asyncpg://contravento_local:local_dev_password_change_me@postgres:5432/contravento_local

# =============================================================================
# REDIS - Cache (Local)
# =============================================================================
REDIS_PASSWORD=local_redis_password
REDIS_PORT=6379
REDIS_URL=redis://:local_redis_password@redis:6379/0

# =============================================================================
# SECURITY - JWT (Local - Weak keys OK for development)
# =============================================================================
# Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=local-dev-secret-key-change-me-min-32-characters-long

ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=90
BCRYPT_ROUNDS=4

# =============================================================================
# EMAIL - MailHog (Local)
# =============================================================================
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=dev@contravento.com
SMTP_TLS=false

# =============================================================================
# CORS - Local Dev Servers
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080,http://127.0.0.1:3000

# =============================================================================
# FILE STORAGE (Local)
# =============================================================================
STORAGE_PATH=/app/storage
UPLOAD_MAX_SIZE_MB=10

# =============================================================================
# LOGGING (Local - Verbose)
# =============================================================================
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# =============================================================================
# PGADMIN (Local Only)
# =============================================================================
PGADMIN_EMAIL=admin@contravento.com
PGADMIN_PASSWORD=admin
