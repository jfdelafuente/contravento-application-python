{
  "name": "contravento-frontend",
  "version": "0.1.0",
  "type": "module",
  "description": "ContraVento cycling platform - Frontend authentication and user profiles",
  "scripts": {
    "dev": "npx vite --open=false",
    "build": "tsc && vite build",
    "build:staging": "tsc && vite build --mode staging",
    "build:prod": "tsc && vite build --mode production",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:a11y": "echo '⚠️  Accessibility tests not yet implemented. TODO: Add axe-core or pa11y tests.'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.10.0",
    "@marsidev/react-turnstile": "^0.7.0",
    "axios": "^1.6.5",
    "date-fns": "^3.0.0",
    "leaflet": "1.9.x",
    "lodash.debounce": "^4.0.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.3.8",
    "react-easy-crop": "^5.5.6",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.70.0",
    "react-hot-toast": "^2.6.0",
    "react-leaflet": "^4.2.1",
    "react-router-dom": "^6.21.0",
    "recharts": "^3.7.0",
    "yet-another-react-lightbox": "^2.6.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/leaflet": "^1.9.15",
    "@types/lodash.debounce": "^4.0.9",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^24.0.0",
    "terser": "^5.44.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^1.6.0"
  }
}
