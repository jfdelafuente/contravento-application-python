/* RecentTripCard.css - Trip card with rustic design */

.recent-trip-card {
  width: 100%;
  position: relative;
}

.recent-trip-card__link {
  display: block;
  background-color: var(--color-cream);
  border: 2px solid rgba(139, 115, 85, 0.2);
  border-radius: 12px;
  overflow: hidden;
  text-decoration: none;
  color: inherit;
  transition: all 0.3s ease;
  position: relative;
}

.recent-trip-card__link::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: repeating-linear-gradient(
    45deg,
    transparent,
    transparent 10px,
    rgba(139, 115, 85, 0.02) 10px,
    rgba(139, 115, 85, 0.02) 20px
  );
  pointer-events: none;
  z-index: 1;
}

.recent-trip-card__link:hover {
  border-color: var(--color-primary);
  box-shadow: 0 4px 12px rgba(107, 114, 59, 0.15);
  transform: translateY(-2px);
}

/* Photo */
.recent-trip-card__photo {
  width: 100%;
  height: 200px;
  position: relative;
  overflow: hidden;
  background-color: rgba(139, 115, 85, 0.1);
}

.recent-trip-card__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.recent-trip-card__image--loaded {
  opacity: 1;
}

.recent-trip-card__photo-skeleton {
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    rgba(139, 115, 85, 0.1) 0%,
    rgba(139, 115, 85, 0.2) 50%,
    rgba(139, 115, 85, 0.1) 100%
  );
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--color-text-secondary);
  font-size: 0.875rem;
}

.recent-trip-card__photo-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  color: var(--color-text-secondary);
  background-color: rgba(139, 115, 85, 0.05);
}

.recent-trip-card__photo-placeholder svg {
  width: 48px;
  height: 48px;
  opacity: 0.3;
}

.recent-trip-card__photo-placeholder span {
  font-size: 0.875rem;
  font-family: var(--font-body);
}

/* Content */
.recent-trip-card__content {
  padding: 1.25rem;
  position: relative;
  z-index: 2;
}

.recent-trip-card__title {
  font-family: var(--font-heading);
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--color-text-primary);
  margin: 0 0 0.75rem 0;
  line-height: 1.3;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.recent-trip-card__meta {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 0.75rem;
}

.recent-trip-card__date,
.recent-trip-card__distance {
  display: flex;
  align-items: center;
  gap: 0.375rem;
  font-family: var(--font-body);
  font-size: 0.875rem;
  color: var(--color-text-secondary);
}

.recent-trip-card__date svg,
.recent-trip-card__distance svg {
  width: 16px;
  height: 16px;
}

/* Tags */
.recent-trip-card__tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.recent-trip-card__tag {
  display: inline-block;
  padding: 0.25rem 0.75rem;
  background-color: rgba(107, 114, 59, 0.1);
  border: 1px solid rgba(107, 114, 59, 0.2);
  border-radius: 16px;
  font-family: var(--font-body);
  font-size: 0.75rem;
  color: var(--color-primary);
  text-transform: lowercase;
}

.recent-trip-card__tag--more {
  background-color: rgba(139, 115, 85, 0.1);
  border-color: rgba(139, 115, 85, 0.2);
  color: var(--color-brown);
  font-weight: 600;
}

/* Animation */
@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.recent-trip-card {
  animation: slideUp 0.4s ease-out;
}

/* Responsive */
@media (max-width: 640px) {
  .recent-trip-card__photo {
    height: 160px;
  }

  .recent-trip-card__content {
    padding: 1rem;
  }

  .recent-trip-card__title {
    font-size: 1.125rem;
  }

  .recent-trip-card__meta {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;
  }
}

/* Accessibility */
.recent-trip-card__link:focus {
  outline: 2px solid var(--color-primary);
  outline-offset: 2px;
}
