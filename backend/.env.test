# Test Environment Configuration

# Application
APP_NAME=ContraVento
APP_ENV=testing
DEBUG=false

# Database - SQLite in-memory (fresh database per test)
DATABASE_URL=sqlite+aiosqlite:///:memory:

# Security & Authentication
SECRET_KEY=test-secret-key-for-testing-only-not-for-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# Password Hashing - Fast bcrypt for tests (4 rounds instead of 12)
BCRYPT_ROUNDS=4

# Email - Disabled for tests
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=test@contravento.com
SMTP_TLS=false

# File Storage - Temporary test directory
STORAGE_PATH=./test_storage
UPLOAD_MAX_SIZE_MB=5
PROFILE_PHOTO_SIZE=400

# CORS
CORS_ORIGINS=http://localhost:3000

# Rate Limiting - More lenient for tests
LOGIN_MAX_ATTEMPTS=10
LOGIN_LOCKOUT_MINUTES=1
VERIFICATION_EMAIL_MAX_PER_HOUR=10

# Session
SESSION_EXPIRE_DAYS=1

# Logging
LOG_LEVEL=WARNING
LOG_FORMAT=text

# Server
HOST=127.0.0.1
PORT=8001
